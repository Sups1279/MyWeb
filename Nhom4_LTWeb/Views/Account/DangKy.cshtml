
@{
    ViewBag.Title = "DangKy";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<style type="text/css">
    tr {
        height: 40px;
    }
</style>

<h4 style="color:red; text-align:center;">@ViewBag.ThongBao</h4>
<table align="center">
    <h2 style="text-align:center">Đăng ký Tài khoản</h2>
    @using (Html.BeginForm("DangKy", "Account"))
    {
        @Html.ValidationSummary(true)
        <tr>
            <td>Họ tên:</td>
            <td>@Html.TextBox("HoTen") @ViewData["err1"]</td>
        </tr>
        <tr>
            <td>Tên đăng nhập:</td>
            <td>@Html.TextBox("UserName") @ViewData["err2"]</td>
        </tr>
        <tr>
            <td>Mật khẩu:</td>
            <td>@Html.Password("Psw") @ViewData["err3"]</td>
        </tr>
        <tr>
            <td>Email:</td>
            <td>@Html.TextBox("Email") @ViewData["err4"]</td>
        </tr>
        <tr>
            <td>Điện thoại:</td>
            <td>@Html.TextBox("SDT") @ViewData["err5"]</td>
        </tr>
        <tr>
            <td></td>
            <td><input type="submit" value="Đăng ký" /> <input type="reset" value="Xóa thông tin" /> </td>
        </tr>
    }
</table>

