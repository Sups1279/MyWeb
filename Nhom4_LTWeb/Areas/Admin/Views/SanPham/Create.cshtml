@model Nhom4_LTWeb.Models.SANPHAM

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Create</h2>

@using (Html.BeginForm("Create", "SanPham", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>SANPHAM</h4>
    <hr />
    <div class="form-group">
        <div class="col-md-2">Tên sản phẩm:</div>
        <div class="col-md-8">
            <input type="text" name="sTenSP" value="@ViewBag.TenSP" class="form-control" />
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-2">Giá sản phẩm:</div>
        <div class="col-md-5">
            <input type="number" size="10" name="dgiaSP" class="form-control" />
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-2">Mô tả sản phẩm: </div>
        <div class="col-md-8">
            <textarea name="sMoTa" class="h-75">@ViewBag.MoTa</textarea>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-2">Hình ảnh:</div>
        <div class="col-md-8">
            <input type="file" name="fl" />
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-2">Số lượng sản phẩm:</div>
        <div class="col-md-2">
            <input type="number" size="70" name="iSoLuong" id="iSoLuong" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-2">Mã loại sản phẩm:</div>
        <div class="col-md-2">
            @Html.DropDownList("MaLSP")
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-2">Hãng:</div>
        <div class="col-md-2">
            @Html.DropDownList("MaHang")
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
