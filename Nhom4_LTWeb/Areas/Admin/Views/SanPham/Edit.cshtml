@model Nhom4_LTWeb.Models.SANPHAM

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@using (Html.BeginForm("Edit", "SanPham", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>SACH</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="control-lable col-md-2">Mã sách:</label>
            <div class="col-md-10">
                <input type="number" size="70" name="iMaSP" value="@Model.MaSP" readonly>
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.TenSP, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input type="text" size="700" name="sTenSP" value="@Model.TenSP" required />
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.MoTa, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <textarea name="sMoTa" id="mota">@Model.MoTa</textarea>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.HinhAnh, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <img src="~/Images/@Model.HinhAnh" width="120" />
            </div>
        </div>


        <div class="form-group">
            @Html.LabelFor(model => model.SoLuong, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input type="number" size="70" name="iSoLuong" min value="@Model.SoLuong" />
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.GiaSP, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input type="number" size="70" name="dGiaSP" min value="@Model.GiaSP" />
            </div>
        </div>

        <div class="form-group">
            Loại sản phẩm: 
              <div class="col-md-10">
                @Html.DropDownList("MaLSP")
            </div>
        </div>

        <div class="form-group">
            Hãng
            <div class="col-md-10">
                @Html.DropDownList("MaHang")
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("VỀ TRANG QUẢN LÝ SÁCH", "Index")
</div>
